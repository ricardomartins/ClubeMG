<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TituloNoticia" parent="AppTheme">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SubtituloNoticia" parent="AppTheme">
        <item name="android:textColor">@color/colorTextSecondaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextoNoticia" parent="AppTheme">
        <item name="android:textColor">@color/colorTextSecondaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ListaNoticias" parent="AppTheme">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:dividerHeight">@dimen/noticias_grid_spacing</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/noticias_grid_spacing</item>
        <item name="android:paddingRight">@dimen/noticias_grid_spacing</item>
    </style>

    <dimen name="tamanho_margem_superior_texto">20dp</dimen>
    <color name="cor_gradiente_topo">#00000000</color>
    <color name="cor_gradiente_centro">#7f000000</color>
    <color name="cor_gradiente_fundo">#dd000000</color>
    <fraction name="local_gradiente_centro">75%</fraction>
</resources>