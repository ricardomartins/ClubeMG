<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary" >#f44336</color>
    <color name="colorPrimaryLight" >#ffcdd2</color>
    <color name="colorPrimaryDark" >#d32f2f</color>
    <color name="colorAccent" >#536dfe</color>
    <color name="colorAccentLight" >#8c9eff</color>
    <color name="colorAccentDark" >#3d5afe</color>

    <color name="colorTextLight">#deffffff</color>
    <color name="colorTextDark">#de000000</color>
    <color name="colorTextSecondaryLight">#8affffff</color>
    <color name="colorTextSecondaryDark">#8a000000</color>
    <color name="colorTextHintLight">#42ffffff</color>
    <color name="colorTextHintDark">#42000000</color>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TituloNoticia" parent="AppTheme">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SubtituloNoticia" parent="AppTheme">
        <item name="android:textColor">@color/colorTextSecondaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextoNoticia" parent="AppTheme">
        <item name="android:textColor">@color/colorTextSecondaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>